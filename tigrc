# Show revision graph?
set show-rev-graph = yes

# Interval between line numbers
set line-number-interval = 5  

# Number of spaces pr tab (default 8)
set tab-size = 4

# Colors 
color status white black underline
color cursor red black
color main-commit default default
color main-ref red default
color main-author green default
color main-date yellow default
color diff-add blue default
color diff-del red default
